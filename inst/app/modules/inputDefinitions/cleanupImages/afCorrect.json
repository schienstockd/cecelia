{
  "fun": {
    "afCorrect": {
      "category": "Module functions",
      "label": "Autofluorescence Correction",
      "env": ["local", "hpc"]
    }
  },
  "spec": {
    "inputs": {
      "valueName": {
				"type:character": {
					"default": "default"
				}
			},
			"afCombinations": {
        "type:group": {
					"divisionChannels": {
						"type:list": {}
					},
					"box1": {
            "type:box": {
    					"channelPercentile": {
    						"type:double": {
    							"min": 0,
    							"max": 100,
    							"default": 60
    						}
    					},
    					"correctionPercentile": {
    						"type:double": {
    							"min": 0,
    							"max": 100,
    							"default": 95
    						}
    					},
    					"correctionMode": {
    						"type:character": {
    							"default": "divide"
    						}
    					},
        			"generateInverse": {
        				"type:boolean": {
        					"default": false
        				}
        			}
            }
					},
					"box2": {
            "type:box": {
    					"medianFilter": {
    						"type:integer": {
    							"min": 0,
    							"max": 10,
    							"default": 0
    						}
    					},
    					"topHatRadius": {
    						"type:integer": {
    							"min": 0,
    							"max": 40,
    							"default": 0
    						}
    					},
    					"rollingBallRadius": {
    						"type:integer": {
    							"min": 0,
    							"max": 40,
    							"default": 0
    						}
    					},
    					"rollingBallPadding": {
    						"type:integer": {
    							"min": 0,
    							"max": 10,
    							"default": 4
    						}
    					}
            }
					}
        }
      },
      "applyGaussian": {
				"type:boolean": {
					"default": false
				}
			},
      "applyGaussianToOthers": {
				"type:boolean": {
					"default": false
				}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
      "valueName": {
				"index": 0,
				"label": "Image to correct",
				"widget:valueNameSelection": {
					"size": 1,
					"multiple": false,
					"field": "imFilepath"
				}
			},
			"afCombinations": {
				"index": 1,
				"label": "Channel combinations",
				"widget:channelGroup": {
				  "visible": false,
					"divisionChannels": {
						"index": 0,
						"label": "Channels",
						"widget:channelSelection": {
							"size": 1,
							"multiple": true
						}
					},
					"box1": {
            "index": 1,
            "label": "Advanced",
            "widget:box": {
              "collapsible": true,
              "collapsed": true,
              "items": {
      					"channelPercentile": {
      		        "index": 1,
      		        "label": "Channel Percentile",
      		        "widget:slider": {
      		          "step": 0.5
      		        }
      		      },
      					"correctionPercentile": {
      						"index": 2,
      						"label": "Correction Percentile",
      						"widget:slider": {
      							"step": 0.5
      						}
      					},
      					"correctionMode": {
      						"index": 3,
      						"label": "Correction mode",
      						"widget:selection": {
      							"size": 1,
      							"multiple": false,
      							"items": [
      								"divide",
      								"none"
      							]
      						}
      					},
          			"generateInverse": {
          				"index": 4,
          				"label": "Generate inverse",
          				"widget:checkbox": {
          				}
          			}
              }
            }
					},
					"box2": {
            "index": 1,
            "label": "Filters",
            "widget:box": {
              "collapsible": true,
              "collapsed": true,
              "items": {
      					"medianFilter": {
      						"index": 0,
      						"label": "Median Filter",
      						"widget:slider": {
      							"step": 1
      						}
      					},
      					"topHatRadius": {
      						"index": 1,
      						"label": "Top hat radius",
      						"widget:slider": {
      							"step": 1
      						}
      					},
      					"rollingBallRadius": {
      						"index": 2,
      						"label": "Rolling ball radius",
      						"widget:slider": {
      							"step": 1
      						}
      					},
      					"rollingBallPadding": {
      						"index": 3,
      						"label": "Rolling ball padding",
      						"widget:slider": {
      							"step": 1
      						}
      					}
              }
            }
					}
				}
			},
			"applyGaussian": {
				"index": 2,
				"label": "Apply gaussian",
				"widget:checkbox": {
				}
			},
			"applyGaussianToOthers": {
				"index": 3,
				"label": "Apply gaussian to others",
				"widget:checkbox": {
				}
			}
    },
    "outputs": {}
  }
}
