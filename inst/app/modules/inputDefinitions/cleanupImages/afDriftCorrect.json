{
  "fun": {
    "afDriftCorrect": {
      "category": "Module functions",
      "label": "Autofluorescence & Drift Correction",
      "env": ["local", "hpc"]
    }
  },
  "spec": {
    "inputs": {
      "valueName": {
				"type:character": {
					"default": "default"
				}
			},
			"afCombinations": {
        "type:group": {
					"divisionChannels": {
						"type:list": {}
					},
					"channelPercentile": {
						"type:double": {
							"min": 0,
							"max": 100,
							"default": 60
						}
					},
					"correctionPercentile": {
						"type:double": {
							"min": 0,
							"max": 100,
							"default": 95
						}
					},
					"correctionMode": {
						"type:character": {
							"default": "divide"
						}
					},
					"medianFilter": {
						"type:integer": {
							"min": 0,
							"max": 10,
							"default": 0
						}
					},
					"topHatRadius": {
						"type:integer": {
							"min": 0,
							"max": 40,
							"default": 0
						}
					},
					"generateInverse": {
    				"type:boolean": {
    					"default": false
    				}
    			}
        }
      },
      "driftChannel": {
        "type:list": {
        }
      },
			"applyDriftCorrection": {
        "type:boolean": {
          "default": true
        }
      },
			"applyGaussianToOthers": {
				"type:boolean": {
					"default": true
				}
			},
			"driftNormalisation": {
				"type:character": {
					"default": "none"
				}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
      "valueName": {
				"index": 0,
				"label": "Image to correct",
				"widget:valueNameSelection": {
					"size": 1,
					"multiple": false,
					"field": "imFilepath"
				}
			},
			"afCombinations": {
				"index": 1,
				"label": "Channel combinations",
				"widget:channelGroup": {
					"divisionChannels": {
						"index": 0,
						"label": "Channels",
						"widget:channelSelection": {
							"size": 1,
							"multiple": true
						}
					},
					"channelPercentile": {
		        "index": 1,
		        "label": "Channel Percentile",
		        "widget:slider": {
		          "step": 0.5
		        }
		      },
					"correctionPercentile": {
						"index": 2,
						"label": "Correction Percentile",
						"widget:slider": {
							"step": 0.5
						}
					},
					"correctionMode": {
						"index": 3,
						"label": "Correction mode",
						"widget:selection": {
							"size": 1,
							"multiple": false,
							"items": [
								"divide",
								"none"
							]
						}
					},
					"medianFilter": {
						"index": 4,
						"label": "Median Filter",
						"widget:slider": {
							"step": 1
						}
					},
					"topHatRadius": {
						"index": 5,
						"label": "Top hat radius",
						"widget:slider": {
							"step": 1
						}
					},
					"generateInverse": {
    				"index": 6,
    				"label": "Generate inverse",
    				"widget:checkbox": {
    				}
    			}
				}
			},
      "driftChannel": {
        "index": 2,
        "label": "Use for drift correction",
        "widget:channelSelection": {
          "size": 1,
          "multiple": false
        }
      },
			"applyDriftCorrection": {
				"index": 3,
				"label": "Correct drift",
				"widget:checkbox": {
				}
			},
			"applyGaussianToOthers": {
				"index": 4,
				"label": "Apply gaussian to others",
				"widget:checkbox": {
				}
			},
			"driftNormalisation": {
				"index": 5,
				"label": "Drift normalisation",
        "widget:selection": {
          "items": {
            "Phase": "phase",
            "None": "none"
          },
          "multiple": false,
          "size": 1
        }
			}
    },
    "outputs": {}
  }
}
