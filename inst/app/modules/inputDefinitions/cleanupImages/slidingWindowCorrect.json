{
  "fun": {
    "slidingWindowCorrect": {
      "category": "Module functions",
      "label": "Sliding Window Correction",
      "env": ["local", "hpc"]
    }
  },
  "spec": {
    "inputs": {
      "valueName": {
				"type:character": {
					"default": "default"
				}
			},
			"slidingWindow": {
				"type:integer": {
					"min": 0,
					"max": 20,
					"default": 2
				}
			},
	    "imChannels": {
        "type:list": {}
      },
  		"createNewChannel": {
				"type:boolean": {
					"default": false
				}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
      "valueName": {
				"index": 0,
				"label": "Image to correct",
				"widget:valueNameSelection": {
					"size": 1,
					"multiple": false,
					"field": "imFilepath"
				}
			},
  		"slidingWindow": {
  			"index": 1,
  			"label": "Sliding Window",
				"widget:slider": {
					"step": 1
				}
  		},
	    "imChannels": {
        "index": 2,
        "label": "Channels",
        "widget:channelSelection": {
          "size": 1,
          "multiple": true,
					"useNames": true
        }
      },
      "createNewChannels": {
				"index": 3,
				"label": "Create new channels",
				"widget:checkbox": {
				}
			}
    },
    "outputs": {}
  }
}
