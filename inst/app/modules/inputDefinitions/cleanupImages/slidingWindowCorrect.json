{
  "fun": {
    "slidingWindowCorrect": {
      "category": "Module functions",
      "label": "Sliding Window Correction",
      "env": ["local", "hpc"]
    }
  },
  "spec": {
    "inputs": {
      "valueName": {
				"type:character": {
					"default": "default"
				}
			},
			"slidingWindow": {
				"type:integer": {
					"min": 0,
					"max": 20,
					"default": 2
				}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
      "valueName": {
				"index": 0,
				"label": "Image to correct",
				"widget:valueNameSelection": {
					"size": 1,
					"multiple": false,
					"field": "imFilepath"
				}
			},
  		"slidingWindow": {
  			"index": 1,
  			"label": "Sliding Window",
				"widget:slider": {
					"step": 1
				}
  		}
    },
    "outputs": {}
  }
}
