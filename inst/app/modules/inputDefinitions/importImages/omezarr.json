{
  "fun": {
    "omezarr": {
      "category": "Module functions",
      "label": "OME-ZARR",
      "env": ["local", "hpc"]
    }
  },
  "spec": {
    "inputs": {
      "pyramidScale": {
        "type:integer": {
          "min": 0,
          "max": 10,
          "default": 4
        }
      },
      "copyToTmp": {
				"type:boolean": {
					"default": true
				}
			},
      "isSequence": {
				"type:boolean": {
					"default": false
				}
			},
      "is3P": {
				"type:boolean": {
					"default": false
				}
			},
      "isStacked": {
				"type:boolean": {
					"default": false
				}
			},
      "skipTiles": {
				"type:integer": {
          "min": 0,
          "max": 5,
          "default": 1
        }
			},
			"physicalStackScale": {
        "type:double": {
          "min": 0,
          "max": 30,
          "default": 1
        }
			},
			"stackDim": {
        "type:character": {
          "default": "Z"
        }
			},
			"createMIP": {
				"type:boolean": {
					"default": false
				}
			},
			"rescaleImage": {
				"type:boolean": {
					"default": false
				}
			},
			"dimOrder": {
				"type:character": {
					"default": ""
				}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
      "pyramidScale": {
        "index": 0,
        "label": "Pyramid scale",
        "widget:slider": {
          "step": 1
        }
      },
			"copyToTmp": {
				"index": 1,
				"label": "Copy to temporary",
				"widget:checkbox": {
				}
			},
			"isSequence": {
				"index": 2,
				"label": "Image sequence",
				"widget:checkbox": {
				}
			},
			"is3P": {
				"index": 3,
				"label": "3P Image (Thorlabs)",
				"widget:checkbox": {
				}
			},
			"isStacked": {
				"index": 4,
				"label": "Image stacked",
				"widget:checkbox": {
				}
			},
			"skipTiles": {
        "index": 5,
        "label": "Skip tiles",
        "widget:slider": {
          "step": 1
        }
      },
			"physicalStackScale": {
        "index": 6,
        "label": "Stack Scale",
        "widget:slider": {
          "step": 0.01
        }
      },
			"stackDim": {
        "index": 7,
        "label": "Stack Dimension",
        "widget:selection": {
          "items": {
            "Depth": "Z",
            "Time": "T"
          },
          "multiple": false,
          "size": 1
        }
      },
			"createMIP": {
				"index": 8,
				"label": "Create MIP",
				"widget:checkbox": {
				}
			},
			"rescaleImage": {
				"index": 9,
				"label": "Rescale image",
				"widget:checkbox": {
				}
			},
			"dimOrder": {
				"index": 10,
				"label": "Custom dimension order",
				"widget:textInput": {
				}
			}
    },
    "outputs": {}
  }
}
