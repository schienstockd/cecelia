{
  "fun": {
    "findSignalPeaks": {
      "category": "Module functions",
      "label": "Find signal peaks",
      "env": ["local"]
    }
  },
  "spec": {
    "inputs": {
			"pops": {
				"type:list": {}
			},
			"signalName": {
				"type:character": {
					"default": "default"
				}
			},
      "channelSignal": {
        "type:list": {}
      },
			"channelDivision": {
				"type:list": {}
			},
			"channelSubtract": {
				"type:list": {}
			},
			"channelSubtractPercentile": {
				"type:double": {
					"min": 0,
					"max": 100,
					"default": 95
				}
			},
			"normOrder": {
				"type:integer": {
					"min": 0,
					"max": 30,
					"default": 12
				}
			},
			"peakThreshold": {
				"type:double": {
					"min": 1,
					"max": 2,
					"default": 1.1
				}
			},
			"minPeaks": {
				"type:integer": {
					"min": 0,
					"max": 10,
					"default": 2
				}
			},
			"sumContactWith": {
				"type:list": {}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
			"pops": {
				"index": 0,
				"label": "Populations",
				"widget:popSelection": {
					"size": 1,
					"multiple": true
				}
			},
			"signalName": {
				"index": 1,
				"label": "Name",
				"widget:textInput": {
				}
			},
			"channelSignal": {
				"index": 2,
				"label": "Channel Signal",
				"widget:channelSelection": {
					"size": 1,
					"multiple": false,
					"useNames": true
				}
			},
			"channelDivision": {
				"index": 3,
				"label": "Channel Division",
				"widget:channelSelection": {
					"size": 1,
					"multiple": false,
					"useNames": true
				}
			},
			"channelSubtract": {
				"index": 4,
				"label": "Subtract channel",
				"widget:channelSelection": {
					"size": 1,
					"multiple": false,
					"useNames": true,
					"addZeroChoice": true
				}
			},
			"channelSubtractPercentile": {
				"index": 5,
				"label": "Subtraction percentile",
				"widget:slider": {
					"step": 0.5
				}
			},
      "normOrder": {
        "index": 6,
        "label": "Normalisation order",
        "widget:slider": {
          "step": 1
        }
      },
			"peakThreshold": {
				"index": 7,
				"label": "Peak threshold",
				"widget:slider": {
					"step": 0.01
				}
			},
			"minPeaks": {
				"index": 8,
				"label": "Minimum peaks",
				"widget:slider": {
					"step": 1
				}
			},
			"sumContactWith": {
				"index": 9,
				"label": "Sum contacts with",
				"widget:popSelection": {
					"size": 1,
					"multiple": false,
					"addZeroChoice": true
				}
			}
    },
    "outputs": {}
  }
}
