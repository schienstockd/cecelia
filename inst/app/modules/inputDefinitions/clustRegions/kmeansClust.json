{
  "fun": {
    "kmeansClust": {
      "category": "Module functions",
      "label": "KMeans clustering",
      "env": ["local", "hpc"]
    }
  },
  "spec": {
    "inputs": {
      "valueName": {
        "type:character": {
          "default": "default"
        }
      },
      "pops": {
        "type:list": {}
      },
      "numClusters": {
				"type:integer": {
					"min": 1,
					"max": 30,
					"default": 3
				}
			},
      "excludeSelfConnections": {
				"type:boolean": {
					"default": false
				}
			},
      "useClusters": {
				"type:boolean": {
					"default": false
				}
			},
      "expandPops": {
				"type:boolean": {
					"default": true
				}
			}
    },
    "outputs": {}
  },
  "ui": {
    "inputs": {
      "valueName": {
				"index": 0,
				"label": "Segmentation",
				"widget:valueNameSelection": {
					"size": 1,
					"multiple": false,
					"field": "imLabelsFilepath"
				}
			},
			"pops": {
				"index": 1,
				"label": "Populations",
				"widget:popSelection": {
					"size": 1,
					"multiple": true
				}
			},
			"numClusters": {
				"index": 2,
				"label": "Number of clusters",
				"widget:slider": {
					"step": 1
				}
			},
			"excludeSelfConnections": {
				"index": 3,
				"label": "Exclude self connections",
				"widget:checkbox": {
				}
			},
			"useClusters": {
				"index": 4,
				"label": "Use clusters",
				"widget:checkbox": {
				}
			},
			"expandPops": {
				"index": 5,
				"label": "Expand populations",
				"widget:checkbox": {
				}
			}
    },
    "outputs": {}
  }
}
